<%= form_for :item, url: item_path(id: item["product_id"]), method: :put, class: "form-control", remote: true do |f| %>
  <tr>
    <td><%= link_to item["name"], product_path(id: item["product_id"]) %></td>
    <td>
      <%= f.number_field :quantity, value: item["quantity"].to_i, class: "form-control", min: Settings.cart.default_quantity %>
    </td>
    <td><%= item["price"] %> VND</td>
    <td><%= item["price"].to_i * item["quantity"].to_i %> VND</td>
    <td><%= f.submit t("update"), class: "btn btn-primary" %></td>
    <td>
      <%= link_to t("delete"), item_path(id: item["product_id"], product_id: item["product_id"]), data: {confirm: t("confirm_delete") + "'#{item["name"]}'"}, method: :delete, remote: true, class: "btn btn-danger" %>
    </td>
  </tr>
<% end %>
