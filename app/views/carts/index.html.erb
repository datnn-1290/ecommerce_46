<div id="all">
<div id="content">
<div class="container">
<div class="col-md-12" id="basket">
                    <div class="box">

                            <h1>Shopping cart</h1>
                            <% if @cart.present? %>
                            <p class="text-muted">You currently have <%= @cart.items.size %> item(s) in your cart.</p>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th colspan="2">Product</th>
                                            <th>Quantity</th>
                                            <th>Unit price</th>
                                            <th>Discount</th>
                                            <th colspan="2">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @cart.items.each do |item| %>
                                      <%= render "carts/item_cart", product: find_product_by_id(item.product_id), item: item, show_total: true %>
                                      <% end %>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="5">Total</th>
                                            <th colspan="2"><%= @cart.total_order %> VND</th>
                                        </tr>
                                    </tfoot>
                                </table>

                            </div>
                            <!-- /.table-responsive -->

                            <div class="box-footer">
                                <div class="pull-left">
                                    <a href="category.html" class="btn btn-default"><i class="fa fa-chevron-left"></i> Continue shopping</a>
                                </div>
                                <div class="pull-right">
                                    <button class="btn btn-default"><i class="fa fa-refresh"></i> Update basket</button>
                                    <button type="submit" class="btn btn-primary">Proceed to checkout <i class="fa fa-chevron-right"></i>
                                    </button>
                                </div>
                            </div>
                          <% else %>
                            <div>
                            	Your cart empty!
                            </div>
                          <% end %>
                    </div>
                </div>

                </div>
                </div>
                </div>
