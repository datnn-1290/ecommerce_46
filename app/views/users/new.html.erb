<% provide :title, t(".signup") %>
<% provide :button_text, t(".register") %>

<div class="container">

  <div class="col-md-12">
    <ul class="breadcrumb">
      <li><a href="#"><%= t "home" %></a>
      </li>
      <li><%= t ".heading" %></li>
    </ul>
  </div>

  <div class="col-md-6">
    <div class="box">
      <h1><%= t ".new_account" %></h1>
      <p class="lead"><%= t ".has_account" %></p>
      <hr>
      <%= render "form" %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="box">
      <h1><%= t ".login" %></h1>
      <p class="lead"><%= t ".not_has_account" %></p>
      <hr>
      <form action="#" method="post">
        <div class="form-group">
          <label for="email"></label>
          <input type="text" class="form-control" id="email">
        </div>
        <div class="form-group">
          <label for="password"></label>
          <input type="password" class="form-control" id="password">
        </div>
        <div class="text-center">
        <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> <%= t ".login" %></button>
        </div>
      </form>
    </div>
  </div>


  </div>
  <!-- /.container -->
</div>
