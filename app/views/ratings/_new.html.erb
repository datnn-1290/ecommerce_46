<%= t ".rating_average" %>
<span class="rating-average color-red">
  <%= @product.rate_average.to_f.round 2 %>
</span>
<div class="col-xs-10">
  <%= form_for [@product, current_user.ratings.build], remote: true,
    authenticity_token: true do |f| %>
    <fieldset class="rating">
    <% 10.times do |x| %>
      <%= f.radio_button :point, 10-x %>
      <label for="rating_point_<%= 10-x %>" title="<%= t ".star_#{10-x}" %>"></label>
    <% end %>
    </fieldset>
    <%= f.submit id: "submit-rating", class: "btn hidden" %>
  <% end %>
</div>
