<div class="container">
  <div class="col-md-12" id="user">
    <div class="content">
      <div class="row">
      <h3><span class="label label-primary"><%= t ".user_infomation" %></span></h3>
      <table class="table table-striped table-bordered table-list users-index">
      <thead>
        <tr>
          <th class="name"><%= t ".name" %></th>
          <th class="email"><%= t ".email" %></th>
          <th class="address"><%= t ".address" %></th>
          <th class="phone"><%= t ".phone" %></th>
          <th class="phone"><%= t ".date_of_birth" %></th>
          <th class="activated"><%= t ".activated" %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.email %></td>
          <td><%= @user.address %></td>
          <td><%= @user.phone %></td>
          <td><%= @user.date_of_birth %></td>
          <td>
            <% if @user.activated %>
              <span class="status text-success"><%= t ".active" %></span>
            <% else %>
              <span class="status text-danger"><%= t ".inactive" %></span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    </div>
    </div>
  </div>
  <hr>
  <hr>
  <div class="col-md-12" id="order_detail">
    <div class="content">
      <div class="row">
      <h3><span class="label label-primary"><%= t ".detail_order" %></span></h3>
      <table class="table table-striped table-bordered table-list users-index">
      <thead>
        <tr>
          <th><%= t ".id" %></th>
          <th><%= t ".product_id" %></th>
          <th><%= t ".quantity" %></th>
          <th><%= t ".price" %></th>
        </tr>
      </thead>
      <tbody>
      <% @order_details.each do |od| %>
        <tr>
          <td><%= od.id %></td>
          <td><%= od.product_id %></td>
          <td><%= od.quantity %></td>
          <td><%= od.price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
      </div>
    </div>
  </div>
</div>
