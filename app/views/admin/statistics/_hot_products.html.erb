<div class="panel panel-default panel-table">
  <div class="panel-heading">
    <div class="row">
      <div class="col col-xs-6">
        <h3 class="panel-title"><%= t ".panel_title" %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= paginate @products %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-list">
      <thead>
        <tr>
          <th><%= t "Index" %></th>
          <th style="width: 20%;"><%= t ".name" %></th>
          <th><%= t ".price" %></th>
          <th><%= t ".quantity" %></th>
          <th><%= t ".status" %></th>
          <th><%= t ".rating" %></th>
          <th><%= t ".category" %></th>
          <th><%= t ".provider" %></th>
          <th><em class="fa fa-cog"></em></th>
        </tr>
      </thead>
      <tbody>
      <% @products.each_with_index do |product, index| %>
        <%= render "admin/products/product", product: product, index: index %>
      <% end %>
      </tbody>
    </table>

  </div>
  <div class="panel-footer">
    <div class="row">

      <div class="col col-xs-8">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>
