<%= form_for [:admin, @category] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :priority %>
    <%= f.number_field :priority, class: "form-control" %>
  </div>

  <%= f.submit yield(:button), class: "btn btn-primary" %>
<% end %>
