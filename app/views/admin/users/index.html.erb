 <% provide :title, t(".page_title")%>

 <div class="panel panel-default panel-table">
  <div class="panel-heading">
    <div class="row">
      <div class="col col-xs-6">
        <h3 class="panel-title"><%= t ".panel_title" %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= page_entries_info @users %>
      </div>
      <div class="col-md-6">
        <%= paginate @users %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-list users-index">
      <thead>
        <tr>
          <th class="name"><%= t ".name" %></th>
          <th class="email"><%= t ".email" %></th>
          <th class="address"><%= t ".address" %></th>
          <th class="phone"><%= t ".phone" %></th>
          <th class="activated"><%= t ".activated" %></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.phone %></td>
          <td>
            <% if user.activated %>
              <span class="status text-success"><%= t ".active" %></span>
            <% else %>
              <span class="status text-danger"><%= t ".inactive" %></span>
            <% end %>

          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col col-xs-4">
        <%= page_entries_info @users %>
      </div>
      <div class="col col-xs-8">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
