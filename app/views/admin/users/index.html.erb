 <% provide :title, t(".page_title")%>

 <div class="panel panel-default panel-table">
  <div class="panel-heading">
    <div class="row">
      <div class="col col-xs-6">
        <h3 class="panel-title"><%= t ".panel_title" %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= page_entries_info @users %>
      </div>
      <div class="col-md-6">
        <%= paginate @users %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-list">
      <thead>
        <tr>
          <th style="width: 20%;"><%= t ".name" %></th>
          <th style="width: 20%;"><%= t ".email" %></th>
          <th style="width: 30%;"><%= t ".address" %></th>
          <th style="width: 10%;"><%= t ".phone" %></th>
          <th style="width: 10%;"><%= t ".activated" %></th>
          <th style="width: 10%;"><em class="fa fa-cog"></em></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.phone %></td>
          <td>
            <% if user.activated %>
              <span class="status text-success"><%= t ".active" %></span>
            <% else %>
              <span class="status text-danger"><%= t ".inactive" %></span>
            <% end %>

          </td>
          <td align="center">
            <%= link_to edit_admin_user_path(user) do %>
              <i class="fa fa-pencil" aria-hidden="true"></i>
            <% end %>
            <%= link_to admin_user_path(user), method: :delete,remote: true, data:{confirm: t(".sure")} do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col col-xs-4">
        <%= page_entries_info @users %>
      </div>
      <div class="col col-xs-8">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
